{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@smartlyio/yavl": ["./packages/yavl/src/index.ts"],
      "@smartlyio/yavl-hooks": ["./packages/yavl-hooks/src/index.ts"]
    },
    "outDir": "dist"
  },
  "include": ["packages/*/index.ts", "packages/*/tests", "packages/*/examples", "packages/*/src"],
  "exclude": ["node_modules", "dist"]
}
